@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken();

    <div class="form-group">
        <label for="email">Email</label>
        @Html.TextBox("email", null, new { @class = "form-control", placeholder = "Enter your email" })
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        @Html.Password("password", null, new { @class = "form-control", placeholder = "Enter your password" })
    </div>

    if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <button type="submit" class="btn btn-primary">Login</button>
}

<!-- Nút đăng ký -->
<div class="mt-3">
    <p>Don't have an account? <a href="@Url.Action("Register", "Auth")" class="btn btn-secondary">Register</a></p>
</div>
