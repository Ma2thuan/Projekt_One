@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

@using (Html.BeginForm("Register", "Auth", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="user_name">Username</label>
        @Html.TextBox("user_name", null, new { @class = "form-control", placeholder = "Enter your username" })
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        @Html.TextBox("email", null, new { @class = "form-control", placeholder = "Enter your email" })
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        @Html.Password("password", null, new { @class = "form-control", placeholder = "Enter your password" })
    </div>

    if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <button type="submit" class="btn btn-primary">Register</button>
}
<div class="mt-3">
    <p>Already have an account? <a href="@Url.Action("Login", "Auth")" class="btn btn-secondary">Login</a></p>
</div>
