@model Projekt_1.Model.SavingsDeposit

@{
    ViewBag.Title = "Create Savings Deposit";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2 class="mb-4">Create Savings Deposit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card shadow mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Savings Deposit Details</h4>
        </div>
        <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

            <!-- Deposit ID -->
            <div class="form-group row">
                @Html.LabelFor(model => model.DepositID, "Deposit ID", new { @class = "col-sm-3 col-form-label" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.DepositID, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DepositID, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Savings Book ID -->
            <div class="form-group row">
                @Html.LabelFor(model => model.SavingsBookID, "Savings Book ID", new { @class = "col-sm-3 col-form-label" })
                <div class="col-sm-9">
                    @Html.DropDownList("SavingsBookID", ViewBag.SavingsBookID as SelectList, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.SavingsBookID, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Customer Name -->
            <div class="form-group row">
                @Html.LabelFor(model => model.user.user_name, "Customer Name", new { @class = "col-sm-3 col-form-label" })
                <div class="col-sm-9">
                    <input type="text" id="CustomerName" class="form-control" readonly />
                    @Html.HiddenFor(model => model.user_id)
                    @Html.ValidationMessageFor(model => model.user.user_name, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Deposit Amount -->
            <div class="form-group row">
                @Html.LabelFor(model => model.DepositAmount, "Deposit Amount", new { @class = "col-sm-3 col-form-label" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.DepositAmount, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DepositAmount, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Interest Rate -->
            <div class="form-group row">
                @Html.LabelFor(model => model.InterestRate, "Interest Rate", new { @class = "col-sm-3 col-form-label" })
                <div class="col-sm-9">
                    <input type="text" id="InterestRate" class="form-control" readonly />
                    @Html.ValidationMessageFor(model => model.InterestRate, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Deposit Date -->
            <div class="form-group row">
                @Html.LabelFor(model => model.DepositDate, "Deposit Date", new { @class = "col-sm-3 col-form-label" })
                <div class="col-sm-9">
                    <input type="date" id="DepositDate" name="DepositDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    @Html.ValidationMessageFor(model => model.DepositDate, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-start gap-2">
            <button type="submit" class="btn btn-success">Create</button>
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#SavingsBookID').change(function () {
                var selectedSavingsBookID = $(this).val();
                $.ajax({
                    url: '@Url.Action("GetCustomerName", "SavingsDeposits")',
                    type: 'GET',
                    data: { savingsBookID: selectedSavingsBookID },
                    success: function (data) {
                        $('#CustomerName').val(data);
                    }
                });

                $.ajax({
                    url: '@Url.Action("GetInterestRate", "SavingsDeposits")',
                    type: 'GET',
                    data: { savingsBookID: selectedSavingsBookID },
                    success: function (data) {
                        $('#InterestRate').val(data);
                    }
                });
            });
        });
    </script>
}
