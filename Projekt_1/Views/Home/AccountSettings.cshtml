@model Projekt_1.Model.user

@{
    ViewBag.Title = "Account Settings";
}

<div class="container mt-4">
    <h2>Account Settings</h2>
    <div class="row">
        <div class="col-md-12">
            <!-- User Information -->
            <div class="card">
                <div class="card-body">
                    <h5>Personal Info</h5>
                    <ul class="list-unstyled">
                        <li><strong>Full name:</strong> @Model.user_name</li>
                        <li><strong>Email:</strong> @Model.email</li>
                        <li><strong>Date of birth:</strong> @(Model.user_birth.HasValue ? Model.user_birth.Value.ToString("MMMM dd, yyyy") : "Not provided")</li>
                        <li><strong>Phone number:</strong> @Model.user_phone</li>
                        <li><strong>Address:</strong> @Model.user_address</li>
                    </ul>
                    <!-- Edit Button -->
                    <button class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#editModal">Edit</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal for Editing User Information -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="@Url.Action("UpdateUserInfo", "Home")" method="post">
                @Html.AntiForgeryToken()

                <!-- Hidden input để truyền user_id -->
                <input type="hidden" name="user_id" value="@Model.user_id" />

                <div class="modal-header">
                    <h5 class="modal-title" id="editModalLabel">Edit Personal Information</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="user_name">Full Name</label>
                        <input type="text" name="user_name" id="user_name" class="form-control" value="@Model.user_name" required />
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" name="email" id="email" class="form-control" value="@Model.email" required />
                    </div>
                    <div class="form-group">
                        <label for="user_birth">Date of Birth</label>
                        <input type="date" name="user_birth" id="user_birth" class="form-control" value="@Model.user_birth?.ToString(" yyyy-MM-dd")" />
                    </div>
                    <div class="form-group">
                        <label for="user_phone">Phone Number</label>
                        <input type="text" name="user_phone" id="user_phone" class="form-control" value="@Model.user_phone" required />
                    </div>
                    <div class="form-group">
                        <label for="user_address">Address</label>
                        <input type="text" name="user_address" id="user_address" class="form-control" value="@Model.user_address" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
