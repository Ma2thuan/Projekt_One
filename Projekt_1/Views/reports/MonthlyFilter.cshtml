@{
    ViewBag.Title = "Lọc Báo Cáo Tháng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<form method="get" action="@Url.Action("MonthlyReport", "Reports" )">
    <div class="form-group">
        <label for="reportMonth">Tháng:</label>
        <input type="month" id="reportMonth" name="reportMonth" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="savingsType">Loại Tiết Kiệm:</label>
        <label for="savingsType">Loại Tiết Kiệm:</label>
        @Html.DropDownList("savingsType", ViewBag.SavingsTypes as SelectList, "Chọn Loại Tiết Kiệm", new { @class = "form-control", @required = "required" })
    </div>
    <button type="submit" class="btn btn-primary">Lọc</button>
</form>
