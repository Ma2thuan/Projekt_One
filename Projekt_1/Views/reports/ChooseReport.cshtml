@{
    ViewBag.Title = "Select Report Type";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="container mt-4">
    <h2 class="text-center">@ViewBag.Title</h2>

    <form method="get" action="@Url.Action("RedirectReport", "Reports")" class="text-center">
        <div class="form-group">
            <label for="reportType">Report Type:</label>
            @Html.DropDownList("reportType", ViewBag.ReportTypes as SelectList, "Select Report Type", new { @class = "form-control", @required = "required" })
        </div>
        <button type="submit" class="btn btn-primary">Continue</button>
    </form>
</div>