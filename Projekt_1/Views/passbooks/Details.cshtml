@model Projekt_1.Model.passbook

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2 class="mb-4"></h2>

<div class="card shadow mb-4">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Passbook Information</h4>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-6">
                <strong>@Html.DisplayNameFor(model => model.OpeningDate):</strong>
                <p>@Html.DisplayFor(model => model.OpeningDate)</p>
            </div>
            <div class="col-md-6">
                <strong>@Html.DisplayNameFor(model => model.InitialDepositAmount):</strong>
                <p>@Html.DisplayFor(model => model.InitialDepositAmount)</p>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <strong>@Html.DisplayNameFor(model => model.DepositAmount):</strong>
                <p>@Html.DisplayFor(model => model.DepositAmount)</p>
            </div>
            <div class="col-md-6">
                <strong>@Html.DisplayNameFor(model => model.InterestRate):</strong>
                <p>@Html.DisplayFor(model => model.InterestRate)</p>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <strong>@Html.DisplayNameFor(model => model.IsClosed):</strong>
                <p>@Html.DisplayFor(model => model.IsClosed)</p>
            </div>
            <div class="col-md-6">
                <strong>@Html.DisplayNameFor(model => model.SavingsAccountType.AccountTypeName):</strong>
                <p>@Html.DisplayFor(model => model.SavingsAccountType.AccountTypeName)</p>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <strong>@Html.DisplayNameFor(model => model.user.user_address):</strong>
                <p>@Html.DisplayFor(model => model.user.user_address)</p>
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-start gap-2">
    @Html.ActionLink("Edit", "Edit", new { id = Model.SavingsBookID }, new { @class = "btn btn-warning" })
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</div>
