@model Projekt_1.Model.WithdrawalSlip

@{
    ViewBag.Title = "Edit Withdrawal Slip";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="container mt-4">
    <h2>Edit Withdrawal Slip</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card shadow mb-4">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Edit Withdrawal Slip Details</h4>
            </div>
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.WithdrawalID)

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="SavingsBookID" class="form-label">
                            @Html.DisplayNameFor(model => model.SavingsBookID)
                        </label>
                        @Html.DropDownList("SavingsBookID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.SavingsBookID, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        <label for="user_id" class="form-label">
                            @Html.DisplayNameFor(model => model.user_id)
                        </label>
                        @Html.DropDownList("user_id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.user_id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="WithdrawalAmount" class="form-label">
                            @Html.DisplayNameFor(model => model.WithdrawalAmount)
                        </label>
                        @Html.EditorFor(model => model.WithdrawalAmount, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.WithdrawalAmount, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        <label for="WithdrawalDate" class="form-label">
                            @Html.DisplayNameFor(model => model.WithdrawalDate)
                        </label>
                        @Html.EditorFor(model => model.WithdrawalDate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.WithdrawalDate, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-start gap-2">
                <button type="submit" class="btn btn-primary">Save</button>
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    }
</div>
