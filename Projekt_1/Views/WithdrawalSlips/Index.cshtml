@model IEnumerable<Projekt_1.Model.WithdrawalSlip>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="container mt-4">
    <h2>Withdrawal Slips</h2>

    <!-- Form tìm kiếm -->
    <p>
        @using (Html.BeginForm("Index", "WithdrawalSlips", FormMethod.Get))
        {
            <div class="form-group">
                <label for="searchString">Tìm kiếm theo PassBook ID:</label>
                @Html.TextBox("searchString", ViewBag.CurrentFilter as string, new { @class = "form-control", placeholder = "Nhập PassBook ID" })
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
        }
    </p>
    <div class="mb-4">
        <p>
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
        </p>
    </div>

        <table id="withdrawalSlipTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Slips ID</th>
                    <th>@Html.ActionLink("PassBook ID", "Index", new { sortOrder = ViewBag.PassBookSortParm })</th>
                    <th>Customer ID</th>
                    <th>Customer Name</th>
                    <th>Slips Amount</th>
                    <th>Slips Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.WithdrawalID)</td>
                        <td>@Html.DisplayFor(modelItem => item.passbook.SavingsBookID)</td>
                        <td>@Html.DisplayFor(modelItem => item.user_id)</td>
                        <td>@Html.DisplayFor(modelItem => item.user.user_name)</td>
                        <td>@Html.DisplayFor(modelItem => item.WithdrawalAmount)</td>
                        <td>@Html.DisplayFor(modelItem => item.WithdrawalDate)</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.WithdrawalID }, new { @class = "btn btn-warning btn-sm" })
                            @Html.ActionLink("Details", "Details", new { id = item.WithdrawalID }, new { @class = "btn btn-info btn-sm" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.WithdrawalID }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @section Scripts {
        <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>
        <script>
            $(document).ready(function () {
                $('#withdrawalSlipTable').DataTable({
                    "paging": true,
                    "searching": true,
                    "ordering": true,
                    "info": true
                });
            });
        </script>
    }
